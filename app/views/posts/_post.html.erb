<li class="box" id="post-<%= post.id %>">
  <span class="user"><%= link_to post.user.name, post.user %></span>
  <span class="title"><%= link_to post.title, post_path(post) %></span>
  <span class="image"><%= image_tag post.display_image if post.image.attached? %></span>
  <span class="content"><%= simple_format(post.content) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>

  <span class="comments-count"><%= link_to pluralize(post.total_comments_count, 'comment'), post_path(post) %></span>
  <% if current_user?(post.user) %>
      <%= link_to "delete", post, method: :delete,
                              data: { confirm: "You sure?" } %>
  <% end %>
</li>